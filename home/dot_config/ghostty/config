# ==========================================================================
#  Ghostty terminal configuration
# ==========================================================================

# --------------------------------------------------------------------------
# Font — Monaspace Neon patched with Nerd Font glyphs
# --------------------------------------------------------------------------
font-family = "MonaspiceNe Nerd Font Mono"
font-size = 14
font-thicken = true
adjust-cell-height = 2

# Monaspace stylistic sets — texture healing + code ligatures
font-feature = calt
font-feature = liga
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = ss04
font-feature = ss05
font-feature = ss06
font-feature = ss07
font-feature = ss08

# --------------------------------------------------------------------------
# Theme — Catppuccin Mocha (matches starship prompt)
# --------------------------------------------------------------------------
theme = catppuccin-mocha

# --------------------------------------------------------------------------
# Window
# --------------------------------------------------------------------------
window-padding-x = 8
window-padding-y = 4
window-decoration = auto
window-theme = ghostty
confirm-close-surface = false
mouse-hide-while-typing = true

# --------------------------------------------------------------------------
# Cursor
# --------------------------------------------------------------------------
cursor-style = bar
cursor-style-blink = true
shell-integration-features = cursor,sudo,title

# --------------------------------------------------------------------------
# Clipboard
# --------------------------------------------------------------------------
copy-on-select = clipboard
clipboard-paste-protection = true

# --------------------------------------------------------------------------
# Scrollback
# --------------------------------------------------------------------------
scrollback-limit = 100000

# --------------------------------------------------------------------------
# Keybindings
# --------------------------------------------------------------------------
keybind = super+shift+enter=new_window
keybind = super+shift+comma=reload_config
